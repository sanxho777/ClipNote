{
  "manifest_version": 3,
  "name": "Vehicle Scraper & Marketplace Lister",
  "version": "1.0.0",
  "description": "Extract vehicle data from automotive sites and auto-fill Facebook Marketplace listings",
  "permissions": [
    "storage",
    "downloads",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.autotrader.com/*",
    "*://*.cars.com/*",
    "*://*.cargurus.com/*",
    "*://*/inventory/*",
    "*://*/vehicle/*",
    "*://*.dealer.com/*",
    "*://*.facebook.com/*",
    "*://facebook.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.autotrader.com/*",
        "*://*.cars.com/*",
        "*://*.cargurus.com/*",
        "*://*.dealer.com/*",
        "*://*/inventory/*",
        "*://*/vehicle/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Vehicle Scraper & Lister",
    "default_popup": "src/ui/popup.html"
  },
  "options_page": "src/ui/options.html",
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
