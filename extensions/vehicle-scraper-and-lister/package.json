{
  "name": "vehicle-scraper-and-lister",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "esbuild src/background.ts src/content.ts src/facebook.ts src/ui/popup.ts src/ui/options.ts --bundle --outdir=dist --sourcemap --format=esm --target=chrome120 --define:__DEV__=true",
    "build": "tsc --noEmit && node scripts/build.mjs",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "package": "npm run build && node scripts/package.mjs",
    "test": "node tests/run.mjs"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.279",
    "@types/node": "^22.0.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "jsdom": "^24.1.0",
    "@eslint/js": "^9.9.0",
    "@typescript-eslint/parser": "^8.8.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "globals": "^15.8.0"
  }
}